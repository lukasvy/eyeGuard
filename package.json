{
  "name": "EyeGuard",
  "version": "1.1.1",
  "description": "Simple app that keeps track of computer breaks to keep your sight healthy.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "webpack --config ./webpack.config.js",
    "start": "set NODE_ENV=development && npm run compile && electron ./dist/electron.js",
    "build": "set NODE_ENV=production && npm run compile && electron-builder "
  },
  "main": "dist/electron.js",
  "author": "Lukas Vyslocky",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "babel-jest": "^25.1.0",
    "cross-env": "^6.0.3",
    "electron": "^12.0.5",
    "electron-builder": "^22.4.1",
    "electron-packager": "^14.2.1",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^3.2.0",
    "url-loader": "^3.0.0",
    "vue-loader": "^15.9.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "babel-loader": "^8.0.6",
    "electron-store": "^5.1.1",
    "path": "^0.12.7",
    "sass": "^1.84.0",
    "semantic-ui-css": "^2.5.0",
    "semantic-ui-vue": "^0.10.1",
    "underscore": "^1.9.2",
    "vue": "^2.6.10",
    "vue-electron": "^1.0.6",
    "vue2-transitions": "^0.3.0"
  },
  "build": {
    "appId": "com.lukasvy.eyeguard",
    "productName": "EyeGuard",
    "mac": {
      "icon": "/public/icons/chronometer256x256.icns",
      "category": "public.utilities"
    },
    "win": {
      "target": "portable",
      "icon": "/public/icons/chronometer256x256.ico"
    },
    "portable": {
      "unicode": false,
      "artifactName": "EyeGuard.exe"
    },
    "files": [
      "./public/**/*",
      "./dist/**/*",
      "!**/node_modules/*",
      "!package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "build"
    }
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
